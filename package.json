    "directory-tree": "^2.2.5",
    "dotenv": "^8.2.0",
    "ethereumjs-tx": "^2.1.2",
    "ethereumjs-wallet": "^1.0.1",
    "highlight.js": "^10.3.2",
    "husky": "^4.3.0",
    "markdown-it": "^12.0.2",
    "markdown-it-emoji": "^2.0.0",
